<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="horizontal"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/back_IMG_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:background="#000000"
        app:srcCompat="@drawable/duel"/>

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">
    >

    <TextView
        android:id="@+id/Blue_player_chose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player2"
        android:gravity="center"
        android:background="#6BD8D29E"

        android:textColor="#072F81"
        android:textStyle="bold"
        android:textSize="30dp"
        >

    </TextView>

    <TextView
        android:id="@+id/Red_player_chose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player1"
        android:gravity="center_horizontal"
        android:background="#6BD8D29E"
        android:layout_marginStart="100dp"
        android:textColor="#D82A1D"
        android:textStyle="bold"
        android:textSize="30dp"
        >

    </TextView>

</LinearLayout>

    <ProgressBar
        android:id="@+id/Blue_Red_Bar"
        android:layout_above="@id/shown_cards"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:progress="50"
        android:progressTint="#072F80"
        android:progressBackgroundTint="#DD483D"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:layout_marginBottom="30dp"

        />

    <LinearLayout
        android:id="@+id/shown_cards"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"

        >


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/Blue_Card_chosen"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/card_back"
            />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/Red_Card_chosen"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/card_back"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_marginTop="10dp"
            android:id="@+id/Blue_Card1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/card_back"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_marginTop="10dp"
            android:id="@+id/Blue_Card2"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/card_back"
            />


        <com.google.android.material.imageview.ShapeableImageView
            android:layout_marginTop="10dp"
            android:id="@+id/Blue_Card3"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/card_back"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_marginTop="10dp"
            android:id="@+id/Blue_Card4"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/card_back"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_marginTop="10dp"
            android:id="@+id/Red_Card1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/card_back"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_marginTop="10dp"
            android:id="@+id/Red_Card2"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/card_back"
            />


        <com.google.android.material.imageview.ShapeableImageView
            android:layout_marginTop="10dp"
            android:id="@+id/Red_Card3"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/card_back"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_marginTop="10dp"
            android:id="@+id/Red_Card4"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/card_back"

            />
    </LinearLayout>

</RelativeLayout>